<h1>The Credence Game</h1>

<p><%= @correct ? 'Correct!' : 'Wrong' %></p>
<p><%= @question.text %></p>
<%= form_tag do %>
  <ul>
  <% @question.answers.each_with_index do |answer, i| %>
    <li>
      <%= answer.text %> (<%= answer.value %>)
      <% for pct in [50, 60, 70, 80, 90, 100] %>
        <%= submit_tag("#{pct}%", name: "submit-#{i}") %>
      <% end %>
    </li>
  <% end %>
  </ul>
<% end %>
